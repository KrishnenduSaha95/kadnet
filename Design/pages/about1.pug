
include snippets.pug

<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(href="https://fonts.googleapis.com/css?family=Roboto", rel="stylesheet")
        link(href="https://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
        link(type="text/css", rel="stylesheet", href="/css/main.css", media="screen")
        title Social Media
    body
        include nav.pug
        header
            .container
                .cover
                    if (frd.coverpic)
                        img(src="data:" + frd.coverpic.contentType + ";base64," + frd.coverpic.data)
                    else
                        img(src="/images/blank_cover.jpg")
                .options
                    #opt_lt
                        ul
                            li
                                a(href="/profile/" + frd.userName) Timeline
                            li
                                a.active About
                            li
                                a(href="/profile/" + frd.userName + "/friends") Friends
                    #opt_rt
                        ul
                            li
                                a(href="#") Photos
                            li
                                a(href="#") Videos
                            li
                                a(href="#") Block
                    #control_block
                        if (stat == 1)
                            button(type="button") Already Friends
                            button#rmfd(type="button") Remove Friend
                            a(href="#") Message
                        else if (stat == 2)
                            button#accfd(type="button") Accept Friend Request
                        else if (stat == 3)
                            button(type="button") Friend Request Sent
                        else
                            button#addfd(type="button") Add Friend
                .photo
                    if (frd.image)
                        img(src="data:" + frd.image.contentType + ";base64," + frd.image.data)
                    else
                        img(src="/images/bdp.png")
                    span #{frd.firstName} #{frd.lastName}
        
        section#about
            .sidebar
                .inner
                    ul
                        li
                            p.heading
                                span About
                            p.pfinfo About Me 
                                span Welcome to My Profile, Welcome to My Profile, Welcome to My Profile
                            p.pfinfo Birthday 
                                span 13th May 1995
                            p.pfinfo Relationship Status 
                                span Single
                            p.pfinfo Nationality 
                                span Indian
                            p.pfinfo Religion 
                                span Hinduism
                            if (frd.location)
                                p.pfinfo Lives in 
                                    span #{frd.location}
                            if (frd.gender)
                                p.pfinfo Gender 
                                    span #{frd.gender}
                            if (frd.phone)
                                p.pfinfo Phone Number 
                                    span #{frd.phone}
                            if (frd.createdAt)
                                p.pfinfo Joined 
                                    span.time(livestamp=frd.createdAt)
                            
            .content
                ul
                    li
                        p.heading Hobbies and Interests
                        .row
                            .s6
                                p.title Hobbies:
                                p.info Coming Soon!
                            .s6
                                p.title Favorite Music:
                                p.info Coming Soon!
                        .row
                            .s6
                                p.title Favorite TV Shows:
                                p.info Coming Soon!
                            .s6
                                p.title Favorite Books:
                                p.info Coming Soon!
                        .row
                            .s6
                                p.title Favorite Movies:
                                p.info Coming Soon!
                            .s6
                                p.title Favorite Games:
                                p.info Coming Soon!
                    li
                        p.heading Education and Employment
                        .row
                            .s12
                                p.title School:
                                p.info Coming Soon!
                        .row
                            .s12
                                p.title College:
                                p.info Coming Soon!
                        .row
                            .s12
                                p.title Works At:
                                p.info Coming Soon!

        include footer.pug
