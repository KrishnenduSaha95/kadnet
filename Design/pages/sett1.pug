<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(href="https://fonts.googleapis.com/css?family=Roboto", rel="stylesheet")
        link(href="https://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
        link(type="text/css", rel="stylesheet", href="/css/main.css", media="screen")
        title Social Media
    body
        nav
            #nav-wrapper
                .item
                    a(href="/")
                        i.material-icons home
                    span Go to Home
                    input#fs(type="text", placeholder="Search")
                    i.material-icons search
                .item
                    .icon-dropdown
                        if (data.friends.received.length > 0)
                            .badge data.friends.received.length
                        i.material-icons#pico people
                        .dropdown
                            p Friend Requests
                            if (data.friends.received.length > 0)
                                ul#people
                                    li
                                        a.dp(href="#")
                                            img(src="/images/bdp.png")
                                        .frd
                                            a(href="#") Krish Cool
                                            span Mutual Friends : 1
                                        span.accept-reject
                                            i.material-icons done
                                            i.material-icons cancel
                                    li
                                        a.dp(href="#")
                                            img(src="/images/bdp.png")
                                        .frd
                                            a(href="#") Krishnendu Saha
                                            span Mutual Friends : 1
                                        span.accept-reject
                                            i.material-icons done
                                            i.material-icons cancel
                                    li
                                        a.dp(href="#")
                                            img(src="/images/bdp.png")
                                        .frd
                                            a(href="#") Amrita Dutta
                                            span Mutual Friends : 1
                                        span.accept-reject
                                            i.material-icons done
                                            i.material-icons cancel
                                    li
                                        a.dp(href="#")
                                            img(src="/images/bdp.png")
                                        .frd
                                            a(href="#") Delmalya Chakraborty
                                            span Mutual Friends : 1
                                        span.accept-reject
                                            i.material-icons done
                                            i.material-icons cancel
                            else
                                .empty
                                    p No Pending Requests
                            .see-all
                                a(href="#") See All Friends Events
                    
                    .icon-dropdown
                        .badge 2
                        i.material-icons#chico chat
                        .dropdown
                            p
                                span Recent Chats/Messages
                                a(href="#")
                                    span New Message
                            ul#chats
                                li
